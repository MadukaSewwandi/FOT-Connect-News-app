<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9D7FF"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/dev_icon"
        android:layout_width="243dp"
        android:layout_height="214dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Developer Info"
        android:src="@drawable/dev_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPER INFORMATION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Name:Sewwandi D.M"
        android:textSize="14sp" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Student No: 2022T01578"
        android:textSize="14sp" />

    <TextView
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Personal Statement: This is a sample student developer project for FoT Connect."
        android:textSize="14sp" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Release Version: v1.0.0"
        android:textSize="14sp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D32F2F"
        android:text="Exit"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF" />
</LinearLayout>
