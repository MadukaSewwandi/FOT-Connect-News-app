<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#E9D7FF">

    <!-- Content container aligned to top, above buttons -->

    <!-- Buttons container fixed at bottom -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="387dp"
        android:layout_height="484dp"
        android:layout_above="@id/buttons_layout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="#42215C"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="281dp"
                android:layout_height="35dp"
                android:layout_marginBottom="24dp"
                android:text="Really want to sign out?"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#8966C3"
                    android:text="OK"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#D32F2F"
                    android:text="Cancel"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="USER INFORMATION"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Username:Maduka"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Email: dm2002sew@gmail.com"
            android:textSize="14sp" />

        <Button
            android:id="@+id/edit_info_button"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#4A148C"
            android:text="Edit Info."
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="384dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="93dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:backgroundTint="#4A148C"
                android:text="Back"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D32F2F"
                android:text="Sign-Out"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
